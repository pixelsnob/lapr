
extends layout

block content
  .col-md-2
    ul.tags
      each tag in tags
        li 
          a.category(href="/products/tags/#{tag}")= tag

  .col-md-10
    .products
      table.products
        thead
          tr
            //- th
            th Instrument
            th Description
            th Maker/Manufacturer
            th Price
        tbody
          each product in products
            tr
              include product_row
      

      if user
        ul
          li
            a.add-product(href="javascript:void(0);") Add Product
      
      include paginate
    

