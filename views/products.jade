
extends layout

block content
  .col-md-3
    .tags-tree
    .categories

  .col-md-9
    .products
      .pagination
        ul
          li
            a.previous(href="javascript:void(0);") Previous
          li
            a.next(href="javascript:void(0);") Next

      table
        thead
          tr
            //- th
            th Instrument
            th Description
            th Maker/Manufacturer
            th Price
        tbody
          each product in products
            tr
              include product_row
      

      if user
        ul
          li
            a.add-product(href="javascript:void(0);") Add Product
      
      include paginate
    

