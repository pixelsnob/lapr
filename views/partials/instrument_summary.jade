
li
  .product(itemscope, itemtype="http://schema.org/Product")
    .image

    .details.hidden-xs.hidden-sm

      h3.name
        - var href = base_path + '/instrument/' + product.slug + '/' + product._id;
        a(href=href, itemprop="name", data-action="click:navigate")= product.name
      
      //- var url = 'http://www.lapercussionrentals.com/instruments/' + product.slug + '/' + product._id;

      //-link(itemprop="url", href=href)

      if Array.isArray(product.makers) && product.makers.length
        p.makers.secondary(itemprop="manufacturer")!= product.makers.map(function(m) { return m.name; }).join(', ')

      if product.sizes && product.sizes.length && !product.hide_sizes_in_lists
        .sizes.secondary!= markdown(product.sizes)

